package components

templ Submenu() {
	@FullWidthCard(NewFullWidthCard().Class("text-slate-100").Background("bg-slate-700").Padding("p-0").Margin("m-0")) {
		@CardContent("flex flex-row justify-center gap-6 p-1") {
			{ children... }
		}
	}
}

templ SubmenuItem(title, path string, active bool) {
	<div
 		class={ "my-3 flex-shrink-0 flex-grow-0",
        templ.KV("underline underline-offset-2", active) }
	><a class="p-3 text-sm hover:bg-slate-800 rounded-md transition-colors duration-500" href={ templ.URL(path) }>{ title }</a></div>
}
